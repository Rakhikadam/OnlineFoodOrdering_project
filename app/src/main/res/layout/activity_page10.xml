<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page10">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bgorange"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_marginBottom="20dp"
        >
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/bg"
            ></TextView>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_marginLeft="150dp"
            ></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            ></ImageView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagerecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </androidx.recyclerview.widget.RecyclerView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imagerecycle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:src="@drawable/imagess"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NonVeg's Food"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
                ></TextView>
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
         android:layout_marginLeft="150dp"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
                ></TextView>
    </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagerecycle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        ></androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg Food"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    ></TextView>
                <TextView
                    android:id="@+id/vegfood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:layout_marginLeft="150dp"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    ></TextView>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagerecycle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        ></androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Product"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    ></TextView>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imagerecycle4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        ></androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </ScrollView>





    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
        android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/home"
        android:layout_weight="1"
        ></ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/shopping_cart"
        android:layout_weight="1"

        ></ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/dinning"
        android:layout_weight="1"

        ></ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/person"
        android:layout_weight="1"

        ></ImageView>
</LinearLayout>




</RelativeLayout>