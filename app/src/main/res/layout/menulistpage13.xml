<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image1page13"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/image3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        ></ImageView>
    <TextView
        android:id="@+id/text1page13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paneer Masala"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/image1page13"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        ></TextView>
 <TextView
     android:id="@+id/text2page13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150Rs "
     android:layout_below="@+id/text1page13"
        android:textColor="@color/black"
     android:layout_toRightOf="@+id/image1page13"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        ></TextView>
<TextView
     android:id="@+id/text3page13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serves2 "
     android:layout_below="@+id/text1page13"
        android:textColor="@color/black"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        ></TextView>

    <Button
        android:id="@+id/buttonvisible"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/image1page13"
        android:layout_below="@id/text3page13"
        android:background="@drawable/bgorange"
       android:layout_marginLeft="20dp"
        android:text="Add"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        ></Button>

    <LinearLayout
        android:id="@+id/buttongone"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image1page13"
        android:layout_below="@id/text3page13"
        android:layout_marginTop="20dp"
        android:visibility="gone"

        >

        <Button
            android:id="@+id/minus"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bgorange"
            android:text="-"></Button>

        <TextView
            android:id="@+id/onetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            ></TextView>

        <Button
            android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bgorange"
       android:layout_marginLeft="10dp"
            android:text="+"
        ></Button>

    </LinearLayout>


</RelativeLayout>