<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/imagep7"
        android:id="@+id/shoppingimage1"
        ></ImageView>

    <TextView
        android:id="@+id/carttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Paneer Masala"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/shoppingimage1"
        android:layout_marginTop="20dp"
        ></TextView>

    <TextView
        android:id="@+id/cartprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="180Rs"
    android:layout_marginLeft="10dp"
    android:layout_below="@+id/carttext"
    android:layout_toRightOf="@+id/shoppingimage1"
        android:layout_marginTop="10dp"
        ></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/cartprise"
        android:layout_toRightOf="@+id/shoppingimage1"


        >
    <TextView
        android:id="@+id/minuscart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
       android:text="-"
        android:background="@drawable/bg"
    android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        ></TextView>
<TextView
    android:id="@+id/count"
        android:layout_width="30dp"
        android:layout_height="30dp"
    android:gravity="center"
       android:text="1"
    android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/addcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg"
        android:gravity="center"
       android:text="+"
    android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        ></TextView>

    </LinearLayout>




</RelativeLayout>